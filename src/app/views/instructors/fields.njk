<div class="item">
    <div>Avatar URL</div>
    <div>
        <input type="url" name="avatar_url" value="{{ instructor.avatar_url }}" placeholder="https://"/>
    </div>
</div>
<div class="item">
    <div>Instrutor</div>
    <div>
        <input type="name" name="name" value="{{ instructor.name }}" placeholder="Seu nome"/>
    </div>
</div>

<div class="item">
    <div>Data de Nascimento</div>
    <div>
        <input type="date" name="birth" value="{{ instructor.birth }}">
    </div>
</div>

<div class="item">
    <div>Sexo</div>
    <div>
        <span>
            <input type="radio" name="gender" value="M" {% if instructor.gender == "M" %} checked {% endif %}/>
            Masculino
        </span>
        <span>
            <input type="radio" name="gender" value="F" {% if instructor.gender == "F" %} checked {% endif %}/>
            Feminino
        </span>
    </div>
</div>

<div class="item">
    <div>Área de atuacao</div>
    <div>
        <input type="text" name="services" value="{{ instructor.services }}" placeholder="Separe os servicos prestados por vírgula">
    </div>
</div>

<button type="submit">Salvar</button>